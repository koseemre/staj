<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.temre.appx.MainActivity">


    <Spinner
        android:id="@+id/ExcuseSpinner"
        android:layout_width="268dp"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExcuseTextView"
        app:layout_constraintRight_toLeftOf="@+id/SendPermission"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/ExcuseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:text="Excuse"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/TotalPerms" />

    <Button
        android:id="@+id/SendPermission"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:text="Request"
        tools:ignore="RtlHardcoded"
        android:layout_marginRight="78dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="174dp"
        android:id="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="152dp">

    </RadioGroup>

    <TextView
        android:id="@+id/TotalDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Number of days in the interval"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/et" />

    <EditText
        android:id="@+id/TotalPerms"
        android:layout_width="111dp"
        android:layout_height="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TotalDayText" />

    <Button
        android:id="@+id/startDateButton"
        android:layout_width="67dp"
        android:layout_height="31dp"
        android:layout_marginLeft="16dp"
        android:text="Start Date"
        android:textSize="7sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sd"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/sd" />

    <TextView
        android:id="@+id/sd"
        android:layout_width="89dp"
        android:layout_height="19dp"
        android:layout_marginRight="62dp"
        android:text="Start Date"
        app:layout_constraintRight_toLeftOf="@+id/startTimeButton"
        app:layout_constraintBaseline_toBaselineOf="@+id/startTimeButton" />

    <Button
        android:id="@+id/endDateButton"
        android:layout_width="67dp"
        android:layout_height="31dp"
        android:layout_marginLeft="16dp"
        android:text="End Date"
        android:textSize="7sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ed"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/ed" />

    <TextView
        android:id="@+id/ed"
        android:layout_width="89dp"
        android:layout_height="19dp"
        android:text="End Date"
        app:layout_constraintRight_toLeftOf="@+id/endTimeButton"
        android:layout_marginRight="55dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/endTimeButton" />

    <Button
        android:id="@+id/startTimeButton"
        android:layout_width="85dp"
        android:layout_height="31dp"
        android:text="START TIME"
        android:textSize="7sp"
        app:layout_constraintRight_toLeftOf="@+id/st"
        android:layout_marginRight="41dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/st" />

    <Button
        android:id="@+id/endTimeButton"
        android:layout_width="85dp"
        android:layout_height="31dp"
        android:text="END TIME"
        android:textSize="7sp"
        app:layout_constraintRight_toLeftOf="@+id/et"
        android:layout_marginRight="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et" />

    <TextView
        android:id="@+id/st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:layout_marginRight="153dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="160dp"
        android:text="End Time"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/st" />

</android.support.constraint.ConstraintLayout>
